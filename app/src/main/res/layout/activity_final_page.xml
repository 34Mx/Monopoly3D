<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".FinalPage">

    <TextView
        android:id="@+id/winnerHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/copperplategothic_bold"
        android:text="Spiel zuende!"
        android:textColor="@color/gold"
        android:textFontWeight="800"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/winnerMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/winnerMenu"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/background_gold_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ListView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/returnToHomeBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@color/gold"
        android:visibility="invisible"
        android:fontFamily="@font/fredoka"
        android:text="Home"
        android:textSize="12sp"
        android:textFontWeight="800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winnerMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>